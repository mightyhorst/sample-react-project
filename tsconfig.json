{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "esModuleInterop" : true,
        "allowJs": true,
        "moduleResolution": "node",
        
        "allowSyntheticDefaultImports": true,
        "typeRoots" : [
            "./node_modules/@types",
            "./@types"
        ],
        "strict": false,
        "strictNullChecks": false,
        "resolveJsonModule": true, 

        "baseUrl": "./",
        "paths": {

        },
        "rootDirs": [
            "src"
        ]
    },
    "exclude": ["node_modules"]
}